function HasAS(word : string): boolean
        if word(1) = "s" or word(1)="S" then
                result true
        else 
                result false
        end if
end HasAS
%main program
var word : string
put"Please enter a word to check if it starts with a s: "..
get word 
if HasAS(word) then
        put "Your word does start with a s."
else 
        put"Your word does not start with a s."
end if
