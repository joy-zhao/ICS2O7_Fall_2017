function double(number : real) : real
    const EXITCONDITION := 100000.0
    var count : int := 0
    loop
        result number *= 2
        count += 1
        put count 
        exit when number > EXITCONDITION
    end loop
end double


var number : real 
put "Please enter a number to double it, or enter a negative integer to exit: " 

    
get number 
put double(number), " is your number doubled times"

